<Window x:Class="Messaging_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Messaging_Example"
        Title="WPF Window with usercontrol" Height="80" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtEntry" Text="Overtype This"/>
        <Button Grid.Column="1" Click="Button_Click" >
            Send
        </Button>
        <local:UserControl1 Grid.Row="1"/>
        <Button Grid.Row="1" Grid.Column="1" Foreground="gray" 
                Background="AntiqueWhite" Command="{Binding DoProcess}"
                Content="{Binding ButtonContent}"/>

    </Grid>
</Window>
